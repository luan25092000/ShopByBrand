<config	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_ShopByBrand::brand" title="Shop By Brand" sortOrder="10">
                    <resource id="Magenest_ShopByBrand::menu" title="Menu" sortOrder="10">
                        <resource id="Magenest_ShopByBrand::shop_by_brand" title="Manage Brands" sortOrder="30"/>
                        <resource id="Magenest_ShopByBrand::group_brand" title="Manage Groups" sortOrder="40" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_ShopByBrand::setting" title="Shop By Brand" sortOrder="50"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
